{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "**/*.ts",
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "buildOnSave": true,
  "compileOnSave": true
}