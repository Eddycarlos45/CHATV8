{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "types": [
      "node", "jest"
    ]
  },
  "include": [
    "**/*.ts",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "__tests__",
    "coverage"
  ],
  "buildOnSave": true,
  "compileOnSave": true
}